<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="620dp"
        android:layout_height="match_parent">

        <org.opencv.android.JavaCameraView
            android:id="@+id/activity_surface_view"
            android:layout_width="650dp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/mark2" />


    </FrameLayout>


    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"

        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/gallery"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/bluetooth"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@android:color/transparent"
            android:padding="0sp"
            android:scaleType="fitCenter"
            android:src="@drawable/gallerybtn"
            />

        <ImageButton
            android:id="@+id/bluetooth"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/bluetooth"

            android:text="bluetooth" />

        <ImageButton
            android:id="@+id/button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/camerabtn"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/watermark"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/watermarkmain" />



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:text="             "
            android:layout_marginTop="350dp"
            />
        <!-- <include
             android:id="@+id/watermarkInclude"
             layout="@layout/watermark_view"
             android:layout_width="90dp"
             android:layout_height="match_parent" /> -->


    </RelativeLayout>

</RelativeLayout>



